<Window x:Class="Volga_IT_Belkov.Windows.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volga_IT_Belkov.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
		<StackPanel VerticalAlignment="Center" Margin="30 0 30 30">
			<Label HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Авторизация</Label>
			<Label HorizontalAlignment="Center" Background="#fff" Panel.ZIndex="1000" Padding="5 0" FontSize="16" Margin="0 0 0 -8">Логин</Label>
			<TextBox x:Name="loginB" FontSize="17" Text="79000101001"/>
			<Label HorizontalAlignment="Center" Background="#fff" Panel.ZIndex="1000" Padding="5 0" FontSize="16" Margin="0 0 0 -8">Пароль</Label>
			<PasswordBox x:Name="passwordB" FontSize="17"/>
			<Button x:Name="LogInBtn" FontSize="17" HorizontalContentAlignment="Center" Margin="0 16 0 0" Click="LogInBtn_Click">Вход</Button>
		</StackPanel>
    </Grid>
</Window>
